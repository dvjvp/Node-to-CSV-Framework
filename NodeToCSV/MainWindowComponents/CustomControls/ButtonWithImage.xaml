<Button x:Class="NodeToCSV.MainWindowComponents.CustomControls.ButtonWithImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NodeToCSV.MainWindowComponents.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Background="#FFc2c2c2" Margin="2.5">
    <StackPanel>
        <Image Width="40"/>
        <TextBlock Text="{Binding Title}" HorizontalAlignment="Center" LineStackingStrategy="BlockLineHeight" TextWrapping="Wrap"/>
    </StackPanel>
</Button>
