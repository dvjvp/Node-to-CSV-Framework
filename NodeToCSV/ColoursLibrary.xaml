<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:NodeToCSV">
    
    <!-- PRIMARY APPLICATION COLORS -->
    <SolidColorBrush x:Key="PrimaryAppColor" Color="MediumPurple"/>
    <SolidColorBrush x:Key="PrimaryTextColor" Color="White"/>
    
    <!-- BUTTON COLORS -->
    <SolidColorBrush x:Key="ButtonsBackgroundColor" Color="BlueViolet"/>
    <SolidColorBrush x:Key="ButtonsMouseOverColor" Color="LightSkyBlue"/>
    <SolidColorBrush x:Key="ButtonsTextColor" Color="White"/>

    <!-- TAB COLORS -->
    <SolidColorBrush x:Key="SelectedTabColor" Color="CornFlowerBlue"/>
    <SolidColorBrush x:Key="HoveredTabColor" Color="Azure"/>
    <SolidColorBrush x:Key="DisabledTabColor" Color="LightGray"/>

    <!-- GRID COLORS -->
    <SolidColorBrush x:Key="GridBackgroundColor" Color="#FF6F6F6F"/>
    <SolidColorBrush x:Key="GridPrimaryLinesColor" Color="#FF646464"/>
    <SolidColorBrush x:Key="GridSecondaryLinesColor" Color="#FF5f5f5f"/>
    <Rect x:Key="GridTileSize" X="0" Y="0" Width="128" Height="128"/>

</ResourceDictionary>